{
  "name": "@musicroom/server",
  "version": "1.0.0",
  "private": true,
  "volta": {
    "node": "16.8.0",
    "yarn": "1.22.10"
  },
  "scripts": {
    "build:tsc": "scripty",
    "build": "node ace build --production",
    "start": "node server.js",
    "dev": "node ace serve --watch",
    "setup:database": "node ace migration:rollback --batch 0 && node ace migration:run && node ace db:seed",
    "lint": "yarn eslint app start --ext ts,js,tsx,jsx --fix",
    "test": "node -r @adonisjs/assembler/build/register japaFile.ts",
    "test:watch": "nodemon -e ts --exec 'yarn test'",
    "coverage": "nyc yarn test",
    "clean": "rimraf dist *.tsbuildinfo"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.0.0",
    "@types/node-fetch": "^2.5.10",
    "@types/redis": "^2.8.29",
    "@types/sinon": "^10.0.2",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^2.0.11",
    "@types/ua-parser-js": "^0.7.36",
    "adonis-preset-ts": "^2.1.0",
    "env-cmd": "^10.1.0",
    "execa": "^5.0.1",
    "get-port": "^5.1.1",
    "japa": "^3.1.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "pino-pretty": "^4.8.0",
    "sinon": "^11.1.1",
    "socket.io-client": "^4.1.2",
    "supertest": "^6.1.3",
    "typescript": "~4.4.3",
    "xstate": "^4.26.1",
    "youch": "^2.2.2",
    "youch-terminal": "^1.1.1"
  },
  "dependencies": {
    "@adonisjs/core": "^5.1.0",
    "@adonisjs/lucid": "^15.0.1",
    "@adonisjs/redis": "^7.0.4",
    "@adonisjs/repl": "^3.0.0",
    "@googlemaps/google-maps-services-js": "^3.1.16",
    "@musicroom/types": "*",
    "@socket.io/redis-adapter": "^7.0.0",
    "geolib": "^3.3.1",
    "googleapis": "^74.1.0",
    "got": "^11.8.2",
    "node-fetch": "^2.6.1",
    "pg": "^8.6.0",
    "proxy-addr": "^2.0.6",
    "query-string": "^7.0.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.1.2",
    "source-map-support": "^0.5.19",
    "tiny-invariant": "^1.2.0",
    "ua-parser-js": "^0.7.28",
    "urlcat": "^2.0.4",
    "zod": "^1.11.17"
  },
  "workspaces": {
    "nohoist": [
      "*adonis-preset-ts*",
      "*adonis-preset-ts*/**"
    ]
  },
  "scripty": {
    "path": "../../scripts/packages"
  }
}

{
    "extends": "./node_modules/adonis-preset-ts/tsconfig",
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests/**/*.ts",
        "app/**/*.test.ts",
        "japaFile.ts"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./",
        "sourceMap": true,
        "paths": {
            "App/*": [
                "./app/*"
            ],
            "Config/*": [
                "./config/*"
            ],
            "Contracts/*": [
                "./contracts/*"
            ],
            "Database/*": [
                "./database/*"
            ]
        },
        "types": [
            "@adonisjs/core",
            "@adonisjs/repl",
            "@adonisjs/redis",
            "@adonisjs/lucid",
            "@adonisjs/auth",
            "@adonisjs/session",
            "@adonisjs/bouncer",
            "@adonisjs/mail",
            "@adonisjs/view"
        ]
    }
}
